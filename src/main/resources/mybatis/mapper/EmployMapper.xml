<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mocha.springbootwar.mapper.EmployeeMapper">


    <select id="getEmpById" resultType="com.mocha.springbootwar.bean.Employee">
      select * from employee where id = #{id}
    </select>

    <insert id="addEmployee">
        insert into employee(lastName, gender, email, d_id) values (#{lastName}, #{gender}, #{email}, #{dId})
    </insert>


</mapper>